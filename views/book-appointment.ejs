  <div class="booking-wrapper">
    <h2>Book Your Appointment</h2>
    <img src="<%= decodeURIComponent(image) %>" alt="Style Image" />
    <p><strong>Name:</strong> <%= name %></p>
    <p><strong>Category:</strong> <%= category %></p>

    <form action="/appointment" method="POST">
      <input type="hidden" name="style" value="<%= name %>">
      <input type="hidden" name="category" value="<%= category %>">

      <div class="form-group">
        <label for="date">Select Date:</label>
        <input type="date" id="appointment-date" name="appointment_date" required>

        
      </div>

      <div class="form-group">
        <label for="time">Available Time Slots:</label>
            <select name="time_slot" id="time-slot" required>
  <option value="">Select a Time</option>
  <option value="09:00 AM to 10:00 AM" data-start="9">09:00 AM to 10:00 AM</option>
  <option value="10:00 AM to 11:00 AM" data-start="10">10:00 AM to 11:00 AM</option>
  <option value="11:00 AM to 12:00 PM" data-start="11">11:00 AM to 12:00 PM</option>
  <option value="12:00 PM to 01:00 PM" data-start="12">12:00 PM to 01:00 PM</option>
  <option value="01:00 PM to 02:00 PM" data-start="13">01:00 PM to 02:00 PM</option>
  <option value="02:00 PM to 03:00 PM" data-start="14">02:00 PM to 03:00 PM</option>
  <option value="03:00 PM to 04:00 PM" data-start="15">03:00 PM to 04:00 PM</option>
  <option value="04:00 PM to 05:00 PM" data-start="16">04:00 PM to 05:00 PM</option>
  <option value="05:00 PM to 06:00 PM" data-start="17">05:00 PM to 06:00 PM</option>
  <option value="06:00 PM to 07:00 PM" data-start="18">06:00 PM to 07:00 PM</option>
  <option value="07:00 PM to 08:00 PM" data-start="19">07:00 PM to 08:00 PM</option>
</select>


      </div>

      <button class="submit-btn" type="submit">Confirm Appointment</button>
    </form>
