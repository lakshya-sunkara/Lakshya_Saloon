    }

    h1 {
      font-size: 2em;
      margin-bottom: 20px;
      color: limegreen;
    }

    p {
      font-size: 1.2em;
      margin-bottom: 30px;
    }

    a {
      text-decoration: none;
      padding: 10px 20px;
      margin: 0 10px;
      background-color: hotpink;
      color: white;
      border-radius: 10px;
      font-weight: bold;
      transition: background-color 0.3s;
    }

    a:hover {
      background-color: deeppink;
    }
  </style>
